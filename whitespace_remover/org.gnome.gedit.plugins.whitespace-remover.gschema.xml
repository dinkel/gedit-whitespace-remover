<schemalist>
  <schema id="org.gnome.gedit.plugins.whitespace-remover"
          path="/org/gnome/gedit/plugins/whitespace-remover/">
    <key type="b" name="remove-whitespace">
      <default>true</default>
      <summary>Remove whitespace</summary>
      <description>Strip trailing whitespace on every line.</description>
    </key>
    <key type="b" name="remove-newlines">
      <default>true</default>
      <summary>Remove newlines</summary>
      <description>Remove newlines at the end of document.</description>
    </key>
    <key type="b" name="preserve-cursor">
      <default>true</default>
      <summary>Preserve cursor position</summary>
      <description>Always preserve the cursor position.</description>
    </key>
  </schema>
</schemalist>


